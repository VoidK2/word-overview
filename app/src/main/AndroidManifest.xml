<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzx.danmu.test">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--8.0需要此权限-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.zzx.danmu.test.app.MyApplication"
        android:theme="@style/AppTheme">
        <activity android:name="com.zzx.danmu.test.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.zzx.danmu.test.activity.GlobalNotificationDanmuActivity" />

        <activity android:name="com.zzx.danmu.test.activity.TestActivity" />

        <service android:name="com.zzx.danmu.test.service.NotificationDanmuService"/>
    </application>

</manifest>